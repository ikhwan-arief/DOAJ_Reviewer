{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/submission-raw.schema.json",
  "title": "DOAJ Reviewer Raw Submission",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "submission_id",
    "journal_homepage_url",
    "publication_model",
    "source_urls"
  ],
  "properties": {
    "submission_id": {
      "type": "string",
      "minLength": 1
    },
    "journal_homepage_url": {
      "type": "string",
      "format": "uri"
    },
    "publication_model": {
      "type": "string",
      "enum": [
        "issue_based",
        "continuous"
      ]
    },
    "source_urls": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "open_access_statement",
        "issn_consistency",
        "publisher_identity",
        "license_terms",
        "copyright_author_rights",
        "peer_review_policy",
        "aims_scope",
        "editorial_board",
        "instructions_for_authors",
        "publication_fees_disclosure",
        "latest_content"
      ],
      "properties": {
        "editorial_board": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "reviewers": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "latest_content": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "archives": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "open_access_statement": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "peer_review_policy": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "plagiarism_policy": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "license_terms": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "copyright_author_rights": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "publication_fees_disclosure": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "publisher_identity": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "issn_consistency": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "aims_scope": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "archiving_policy": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "repository_policy": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "instructions_for_authors": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "manual_policy_pages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "rule_hint",
          "url",
          "title",
          "text"
        ],
        "properties": {
          "rule_hint": {
            "type": "string",
            "enum": [
              "open_access_statement",
              "peer_review_policy",
              "license_terms",
              "copyright_author_rights",
              "publication_fees_disclosure",
              "publisher_identity",
              "issn_consistency",
              "plagiarism_policy",
              "aims_scope",
              "archiving_policy",
              "repository_policy",
              "instructions_for_authors"
            ]
          },
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "manual_input_warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
